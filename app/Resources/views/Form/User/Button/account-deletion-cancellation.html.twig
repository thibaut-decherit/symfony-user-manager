<form
        action="{{ path('account_deletion_cancellation') }}" method="post" id="form-button-account-deletion-delete"
        class="mr-2"
>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('account_deletion_cancellation') }}" id="csrf-token"/>
    <input
            type="hidden" name="account_deletion_token" value="{{ user.accountDeletionToken }}"
            id="account-activation-token"
    />
    <input
            class="btn btn-secondary border-0 form-control rounded-0 text-white" type="submit" id="_submit"
            name="_submit"
            value="{{ 'global.form.cancel'|trans }}"
    />
</form>

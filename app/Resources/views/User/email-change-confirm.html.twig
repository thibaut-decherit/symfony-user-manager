{% extends 'base.html.twig' %}

{% set page_title = 'page_title.email_address_change'|trans %}

{% block body %}
    <div class="row">
        <h1 class="col">{{ 'page_title.email_address_change'|trans }}</h1>
    </div>

    <div class="row mb-3">
        <div class="col">
            <p>
                Hey {{ user.username }}!
                If you click on the button below, you will change the email address linked to your account from
                <span class="font-weight-bold">{{ user.email }}</span> to
                <span class="font-weight-bold">{{ user.emailChangePending }}</span>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col d-flex justify-content-center">
            {{ include(':Form/User/Button:email-change-cancel.html.twig') }}
            {{ include(':Form/User/Button:email-change-confirm.html.twig') }}
        </div>
    </div>

{% endblock %}
